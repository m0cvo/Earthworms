<Window x:Class="Earthworms.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Earthworms"
        mc:Ignorable="d"
        Title="InfoWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="InfoList" Margin="0,0,566,130" BorderBrush="#FF0743F7" FontSize="14" Loaded="InfoList_Loaded"/>
        <Button x:Name="CloseBtn" Content="Close" HorizontalAlignment="Left" Margin="665,366,0,0" VerticalAlignment="Top" Width="100" Height="30" FontSize="14" Click="CloseBtn_Click"/>

    </Grid>
</Window>
